{# Use common logic already used in config base form #}
{% import('pages/setup/general/base_form.html.twig') as config_macros %}
{% import('components/form/fields_macros.html.twig') as fields %}

<div>
    <form>
        {{ fields.readOnlyField('', scope.getLabel(), __('Scope'), {
            is_horizontal: false,
        }) }}
        {% if scope == constant('Glpi\\Config\\ConfigScope::ENTITY') %}
            {{ fields.readOnlyField('', get_item_name('Entity', scope_params['entities_id']|default(session('glpiactive_entity'))), 'Entity'|itemtype_name(1), {
                is_horizontal: false,
            }) }}
        {% elseif scope == constant('Glpi\\Config\\ConfigScope::USER') %}
            {{ fields.readOnlyField('', get_item_name('User', scope_params['users_id']|default(session('glpiID'))), 'User'|itemtype_name(1), {
                is_horizontal: false,
            }) }}
        {% endif %}
        {{ config_macros.render_option(option, scope, {
            full_width: true,
            is_horizontal: false
        }, null, scope_params) }}
    </form>
</div>
